# Example environment variables for development
# Copy this file to .env.local and update the values

# Application Configuration
NEXT_PUBLIC_APP_NAME="NextOpenImpact 4.0"
NEXT_PUBLIC_APP_VERSION="4.0.0"
NEXT_PUBLIC_ENVIRONMENT="development"

# API Configuration - Use relative paths for better portability
NEXT_PUBLIC_API_URL="/api"

# Database
DATABASE_URL="file:./dev.db"

# Authentication
# IMPORTANT: Set NEXTAUTH_URL to match your deployment URL
# - Development: http://localhost:3000
# - Production (Vercel): https://your-domain.vercel.app (or use your custom domain)
# - Preview (Vercel): Automatically uses VERCEL_URL if not set
NEXTAUTH_URL="http://localhost:3000"

# CRITICAL: Generate a secure random secret for production
# You can generate one using: openssl rand -base64 32
# This secret is used to encrypt session tokens and MUST be set in production
NEXTAUTH_SECRET="your-secret-here-replace-in-production"

# OAuth Providers
# Configure these with your actual OAuth credentials
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional): https://github.com/settings/developers
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Enable diagnostics in development (optional)
NEXT_PUBLIC_ENABLE_DIAGNOSTICS="true"

# Analytics (optional)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# ============================================
# Production Deployment Notes (Vercel):
# ============================================
# 1. Set NEXTAUTH_URL to your production domain (e.g., https://your-app.vercel.app)
# 2. Generate a secure NEXTAUTH_SECRET (use: openssl rand -base64 32)
# 3. Configure OAuth credentials for your production domain
# 4. Ensure OAuth redirect URLs include your production domain
# 5. For Vercel preview deployments, NEXTAUTH_URL can use VERCEL_URL automatically